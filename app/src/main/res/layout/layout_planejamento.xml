<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:collapseColumns="*"
    android:stretchColumns="*"
    android:id="@+id/tableLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#AAAAAA">


    <TableRow android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textAnoSem"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:padding="5dp"
            android:layout_span="2"
            android:text="ano-sem"
            android:textSize="18sp"
            android:background="#AAAAAA"/>

        <TextView
            android:id="@+id/textLinguas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Lin" />

        <TextView
            android:id="@+id/textExatas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Exa" />

        <TextView
            android:id="@+id/textSaude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Sau" />

        <TextView
            android:id="@+id/textHumanidades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Hum" />

    </TableRow>

    <TableRow android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textPer"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_span="2"
            android:gravity="end"
            android:padding="5dp"
            android:text="Cumpriu:" />


        <TextView
            android:id="@+id/textLinguasP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Linp" />

        <TextView
            android:id="@+id/textExatasP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Exap" />

        <TextView
            android:id="@+id/textSaudeP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Saup" />

        <TextView
            android:id="@+id/textHumanidadesP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Hump" />

    </TableRow>


</TableLayout>
